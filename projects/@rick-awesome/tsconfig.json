{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@rick-flow/*": ["src/roadmap/flowcharts/*"],
      "@rick-img-resize/*": ["src/project/img-resize/*"]
    }
  },
  "include": ["src", "tailwind.config.cjs", "src/roadmap/flowcharts"],
  "exclude": ["src/roadmap", "src/rick"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
